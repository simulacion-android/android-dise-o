<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/logo"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modelo del celular -->
        <TextView
            android:id="@+id/tvModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Samsung Galaxy S23"/>

        <!-- Estado: Reacondicionado/Reparado/Usado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            tools:text="Reacondicionado - Garantía 6 meses"/>

        <!-- Especificaciones técnicas -->
        <TextView
            android:id="@+id/tvEspecificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            tools:text="256GB - 8GB RAM - Snapdragon 8 Gen 2"/>

        <!-- Condición detallada -->
        <TextView
            android:id="@+id/tvCondicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            tools:text="Incluye caja original y accesorios"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/verde"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="$699.99"/>

        <!-- Botón de acción -->
        <Button
            android:id="@+id/btnAccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:text="Comprar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>